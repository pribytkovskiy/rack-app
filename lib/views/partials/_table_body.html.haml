- Codebreaker::Game.new.load.each_with_index do |game, index|
  %tr
    %th{:scope => "row"}= index + 1
    %td= game.name
    %td= game.level.capitalize
    %td
      = game.total_attempts - game.attempts
      \/#{game.total_attempts}
    %td
      = game.total_hints - game.hints
      \/#{game.total_hints}
    %td= game.date
